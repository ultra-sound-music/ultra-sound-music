{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@usm/app-state": ["libs/app-state/src/index.ts"],
      "@usm/arweave": ["libs/arweave/src/index.ts"],
      "@usm/assets/*": ["libs/assets/src/*"],
      "@usm/audio-player": ["libs/audio-player/src/index.ts"],
      "@usm/components": ["libs/components/src/index.ts"],
      "@usm/config": ["libs/config/src/index.ts"],
      "@usm/content": ["libs/content/src/index.ts"],
      "@usm/copy": ["libs/copy/src/index.ts"],
      "@usm/services-solanafm": ["libs/services/solanafm/src/index.ts"],
      "@usm/sol-client": ["libs/sol-client/src/index.ts"],
      "@usm/store": ["libs/store/src/index.ts"],
      "@usm/styles/*": ["libs/styles/src/*"],
      "@usm/ui": ["libs/ui/src/index.ts"],
      "@usm/util-loader": ["libs/util/loader/src/index.ts"],
      "@usm/util-logger": ["libs/util/logger/src/index.ts"],
      "@usm/util-script-loader": ["libs/util/script-loader/src/index.ts"],
      "@usm/util-string": ["libs/util/string/src/index.ts"],
      "@usm/util-utils": ["libs/util/utils/src/index.ts"],
      "@usm/util-web": ["libs/util/web/src/index.ts"],
      "@usm/util-web-storage": ["libs/util/web-storage/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
