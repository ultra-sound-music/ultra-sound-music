{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@usm/audio-player": ["libs/audio-player/src/index.ts"],
      "@usm/components": ["apps/web/src/components.ts"],
      "@usm/copy": ["libs/copy/src/index.ts"],
      "@usm/images/*": ["libs/images/img/*"],
      "@usm/sol-client": ["libs/sol-client/src/index.ts"],
      "@usm/store/*": ["libs/store/src/*"],
      "@usm/styles/*": ["libs/styles/src/*"],
      "@usm/ui": ["libs/ui/src/index.ts"],
      "@usm/utils/*": ["libs/utils/src/*"],
      "@usm/wallets/sol-wallet": ["libs/wallets/sol-wallet/src/index.ts"],
      "@usm/wallets/types": ["libs/wallets/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
